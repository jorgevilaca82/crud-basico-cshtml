@{
  var ID       = Request.Form["ID"];
  var NOME     = Request.Form["nome"];
  var CPF      = Request.Form["cpf"];
  var SEXO     = Request.Form["sexo"];
  var TELEFONE = Request.Form["telefone"];

  var db = Database.Open("Sistema");

  int resultado = db.Execute(@"
  UPDATE PESSOA SET 
  NOME     = @0, 
  CPF      = @1, 
  SEXO     = @2, 
  TELEFONE = @3 
  WHERE
    ID = @4", NOME, CPF, SEXO, TELEFONE, ID);

  if(resultado == 1){
      Session["mensagem"] = "Registro Atualizado com sucesso!";
      Response.Redirect("Index");
      
  }
}



